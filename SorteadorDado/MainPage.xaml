<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SorteadorDado.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="ROLADOR DE"
                Style="{StaticResource Headline}"
                FontSize="50"
                FontAttributes="Bold" 
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
          
            <Label
                    Text="DADOS"
                    Style="{StaticResource Headline}"
                    FontSize="50"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

            <Label
                x:Name="MostrarResultado"
                Text=""
                Style="{StaticResource SubHeadline}"
                FontSize="50"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            <Picker 
                x:Name="picker"
                Title="Selecione a Quantidade de Lados do Dado"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HorizontalTextAlignment="Center"
                FontSize="25"
                FontAttributes="Bold">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>4</x:String>
                        <x:String>6</x:String>
                        <x:String>10</x:String>
                        <x:String>20</x:String>
                        <x:String>100</x:String>
                    </x:Array>
                </Picker.ItemsSource>
               
            </Picker>


            <Button
                x:Name="SortearBtn"
                Text="Sortear" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="SortearBtn_Clicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
